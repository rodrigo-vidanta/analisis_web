{
  "family": "n8n-worker-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "n8n-worker",
      "image": "n8nio/n8n:latest",
      "command": ["n8n", "worker"],
      "essential": true,
      "environment": [
        {
          "name": "DB_TYPE",
          "value": "postgresdb"
        },
        {
          "name": "DB_POSTGRESDB_HOST",
          "value": "${RDS_ENDPOINT}"
        },
        {
          "name": "DB_POSTGRESDB_DATABASE",
          "value": "n8n"
        },
        {
          "name": "DB_POSTGRESDB_USER",
          "value": "n8nuser"
        },
        {
          "name": "DB_POSTGRESDB_PORT",
          "value": "5432"
        },
        {
          "name": "REDIS_HOST",
          "value": "${REDIS_ENDPOINT}"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "QUEUE_BULL_REDIS_HOST",
          "value": "${REDIS_ENDPOINT}"
        },
        {
          "name": "QUEUE_BULL_REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "EXECUTIONS_MODE",
          "value": "queue"
        },
        {
          "name": "N8N_LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "N8N_METRICS",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "DB_POSTGRESDB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:rds/n8n/password"
        },
        {
          "name": "N8N_ENCRYPTION_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:n8n/encryption/key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/n8n-worker",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "ps aux | grep -v grep | grep n8n || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
